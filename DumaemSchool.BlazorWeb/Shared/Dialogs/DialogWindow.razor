<MudDialog>
    <DialogContent>
        @DialogContent
    </DialogContent>
    <DialogActions>
        <MudButton OnClick="Cancel">Нет</MudButton>
        <MudButton Color="Color" OnClick="Submit">Да</MudButton>
    </DialogActions>
</MudDialog>
@code {
    [CascadingParameter] MudDialogInstance? MudDialog { get; set; }
    [Parameter] public string? DialogContent { get; set; }
    [Parameter] public MudBlazor.Color Color { get; set; }

    void Submit() => MudDialog?.Close(DialogResult.Ok(true));
    void Cancel() => MudDialog?.Cancel();
}